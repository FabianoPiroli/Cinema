@model Cinema.Models.Session
@{
    ViewData["Title"] = "Detalhes da Sessão";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="fw-bold mb-4">
                        <i class="fas fa-film text-warning me-2"></i>
                        @Model.Movie?.Title
                    </h2>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="fw-bold">
                                <i class="fas fa-calendar me-1"></i>
                                Data:
                            </h6>
                            <p class="text-muted">@Model.StartTime.ToString("dd/MM/yyyy")</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="fw-bold">
                                <i class="fas fa-clock me-1"></i>
                                Horário:
                            </h6>
                            <p class="text-muted">@Model.StartTime.ToString("HH:mm") - @Model.EndTime.ToString("HH:mm")</p>
                        </div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="fw-bold">
                                <i class="fas fa-door-open me-1"></i>
                                Sala:
                            </h6>
                            <p class="text-muted">Sala @Model.Room?.RoomNumber</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="fw-bold">
                                <i class="fas fa-users me-1"></i>
                                Capacidade:
                            </h6>
                            <p class="text-muted">@Model.Room?.Capacity lugares</p>
                        </div>
                    </div>
                    
                    @if (Model.Movie != null)
                    {
                        <div class="mb-4">
                            <h6 class="fw-bold">
                                <i class="fas fa-clock me-1"></i>
                                Duração:
                            </h6>
                            <p class="text-muted">@Model.Movie.DurationInMinutes minutos</p>
                        </div>
                        
                        @if (Model.Movie.Genres != null && Model.Movie.Genres.Any())
                        {
                            <div class="mb-4">
                                <h6 class="fw-bold">
                                    <i class="fas fa-tags me-1"></i>
                                    Gêneros:
                                </h6>
                                @foreach (var genre in Model.Movie.Genres)
                                {
                                    <span class="badge bg-warning text-dark me-1">@genre.Name</span>
                                }
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h5 class="fw-bold mb-4">
                        <i class="fas fa-ticket-alt text-warning me-2"></i>
                        Comprar Ingresso
                    </h5>
                    <p class="text-muted mb-4">Garanta já seu lugar para esta sessão!</p>
                    <a asp-controller="Ticket" asp-action="Create" asp-route-sessionId="@Model.ID" 
                       class="btn btn-warning btn-lg w-100">
                        <i class="fas fa-shopping-cart me-2"></i>Comprar Ingresso
                    </a>
                </div>
            </div>
            
            <div class="card shadow mt-4">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">
                        <i class="fas fa-info-circle text-warning me-1"></i>
                        Informações Importantes
                    </h6>
                    <ul class="list-unstyled text-muted small">
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-1"></i>
                            Chegue 15 minutos antes
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-1"></i>
                            Desconto para estudantes
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-1"></i>
                            Projeção digital 4K
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-1"></i>
                            Som surround
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-outline-warning">
                <i class="fas fa-arrow-left me-1"></i>Voltar para Sessões
            </a>
        </div>
    </div>
</div>

@model IEnumerable<Cinema.Models.Session>

@{
    ViewData["Title"] = "Sessões";
}

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold mb-3">
                <i class="fas fa-clock text-warning me-3"></i>
                Sessões Disponíveis
            </h1>
            <p class="lead text-muted">Confira os horários dos filmes em cartaz</p>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var session in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card session-card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@session.Movie?.Title</h5>
                            <div class="row mb-3">
                                <div class="col-6">
                                    <p class="card-text text-muted mb-1">
                                        <i class="fas fa-calendar me-1"></i>
                                        @session.StartTime.ToString("dd/MM/yyyy")
                                    </p>
                                </div>
                                <div class="col-6">
                                    <p class="card-text text-muted mb-1">
                                        <i class="fas fa-clock me-1"></i>
                                        @session.StartTime.ToString("HH:mm")
                                    </p>
                                </div>
                            </div>
                            <p class="card-text text-muted mb-3">
                                <i class="fas fa-door-open me-1"></i>
                                Sala @session.Room?.RoomNumber
                            </p>
                            <p class="card-text text-muted mb-3">
                                <i class="fas fa-users me-1"></i>
                                Capacidade: @session.Room?.Capacity lugares
                            </p>
                            <div class="d-grid">
                                <a asp-action="Details" asp-route-id="@session.ID" 
                                   class="btn btn-warning">
                                    <i class="fas fa-info-circle me-1"></i>Ver Detalhes
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-clock fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">Nenhuma sessão disponível</h4>
            <p class="text-muted">Confira nossa programação de filmes!</p>
        </div>
    }
</div>

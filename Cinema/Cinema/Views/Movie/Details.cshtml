@model Cinema.Models.Movie
@{
    ViewData["Title"] = "Detalhes do Filme";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="fw-bold mb-4">
                        <i class="fas fa-film text-warning me-2"></i>
                        @Model?.Title
                    </h2>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="fw-bold">
                                <i class="fas fa-clock me-1"></i>
                                Duração:
                            </h6>
                            <p class="text-muted">@Model.DurationInMinutes.ToString("HH:mm")</p>
                        </div>

                        <div class="col-md-6">
                            <h6 class="fw-bold">
                                <i class="fas fa-clock me-1"></i>
                                Classificação Indicativa:
                            </h6>
                            <p class="text-muted">@Model.AgeRating</p>
                        </div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="fw-bold">
                                <i class="fas fa-door-open me-1"></i>
                                Gênero
                            </h6>
                            <p class="text-muted">Sala @Model.Genres</p>
                        </div>

                        <div class="col-md-6">
                            <h6 class="fw-bold">
                                <i class="fas fa-users me-1"></i>
                                Atores
                            </h6>
                            <p class="text-muted">@Model.Actors</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="fw-bold">
                                <i class="fas fa-users me-1"></i>
                                Atores
                            </h6>
                            <p class="text-muted">@Model.Directors</p>
                        </div>
                    </div>
                    @if (Model.Title != null)
                    {
                        <div class="mb-4">
                            <h6 class="fw-bold">
                                <i class="fas fa-clock me-1"></i>
                                Duração:
                            </h6>
                            <p class="text-muted">@Model.DurationInMinutes minutos</p>
                        </div>
                        
                        @if (Model.Genres != null && Model.Genres.Any())
                        {
                            <div class="mb-4">
                                <h6 class="fw-bold">
                                    <i class="fas fa-tags me-1"></i>
                                    Gêneros:
                                </h6>
                                @foreach (var genre in Model.Genres)
                                {
                                    <span class="badge bg-warning text-dark me-1">@genre.Name</span>
                                }
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-outline-warning">
                <i class="fas fa-arrow-left me-1"></i>Voltar para Filmes
            </a>
        </div>
    </div>
</div>

@model IEnumerable<Cinema.Models.Movie>

@{
    ViewData["Title"] = "Filmes";
}

<div class="container py-5">

    <form id="deleteForm" method="post" style="display:none">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="" />
    </form>
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold mb-3">
                <i class="fas fa-video text-warning me-3"></i>
                Filmes em Cartaz
            </h1>
        </div>
        <div class="text-center">
            <a asp-controller="Movie" asp-action="Create" class="btn btn-warning btn-lg">
                Adicionar
            </a>
        </div>
    </div>
    
    <!-- Search Bar -->
    <div class="row mb-5">
        <div class="col-lg-6 mx-auto">
            <form asp-action="Search" method="get" class="d-flex">
                <div class="input-group">
                    <input type="text" name="query" class="form-control form-control-lg" 
                           placeholder="Buscar filmes, atores, diretores ou gêneros..." 
                           value="@ViewBag.SearchQuery" />
                    <button class="btn btn-warning btn-lg" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.SearchQuery != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="fas fa-search me-2"></i>
                    Resultados para: <strong>"@ViewBag.SearchQuery"</strong>
                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary ms-3">
                        <i class="fas fa-times me-1"></i>Limpar busca
                    </a>
                </div>
            </div>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card movie-card h-100 shadow-sm">
                        <img src="@movie.ImageURL" class="card-img-top bg-dark d-flex align-items-center justify-content-center" style="height: 300px; width: 519px;" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@movie.Title</h5>
                            <p class="card-text text-muted">
                                <i class="fas fa-clock me-1"></i>
                                @movie.DurationInMinutes minutos
                            </p>

                            @{
                                var ageDisplay = movie.AgeRating?.Rating;
                                if (string.IsNullOrWhiteSpace(ageDisplay) || ageDisplay == "0")
                                {
                                    ageDisplay = "Não informada";
                                }
                            }
                            <p class="card-text text-muted">
                                Classificação indicativa:
                                <span class="fw-bold ms-1">@ageDisplay</span>
                            </p>

                            @if (movie.Genres != null && movie.Genres.Any())
                            {
                                <div class="mb-3">
                                    @foreach (var genre in movie.Genres.Take(3))
                                    {
                                        <span class="badge bg-warning text-dark me-1">@genre.Name</span>
                                    }
                                </div>
                            }
                            @if (movie.Actors != null && movie.Actors.Any())
                            {
                                <p class="card-text text-muted small">
                                    <i class="fas fa-users me-1"></i>
                                    @string.Join(", ", movie.Actors.Take(3).Select(a => a.FirstName + " " + a.LastName))
                                </p>
                            }
                            <div class="mt-auto">
                                <div class="d-flex gap-2 flex-column flex-sm-row">
                                    <a asp-action="Update" asp-route-id="@movie.ID"
                                       class="btn btn-warning flex-fill">
                                        <i class="fa-solid fa-pen me-1"></i>Editar
                                    </a>
                                    <a href="#" class="btn btn-danger flex-fill delete-link" data-id="@movie.ID">
                                        <i class="fa-solid fa-trash me-1"></i>Excluir
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-film fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">Nenhum filme em cartaz no momento</h4>
        </div>
    }
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.delete-link').forEach(function (el) {
            el.addEventListener('click', function (e) {
                e.preventDefault();
                if (!confirm('Excluir filme?')) return;
                var id = this.dataset.id;
                var form = document.getElementById('deleteForm');
                form.action = '/Movie/Delete/' + id;
                var idInput = form.querySelector('input[name="id"]');
                if (!idInput) {
                    idInput = document.createElement('input');
                    idInput.type = 'hidden';
                    idInput.name = 'id';
                    form.appendChild(idInput);
                }
                idInput.value = id;
                form.submit();
            });
        });
    });
</script>
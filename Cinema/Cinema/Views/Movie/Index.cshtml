@model IEnumerable<Cinema.Models.Movie>

@{
    ViewData["Title"] = "Filmes";
}

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold mb-3">
                <i class="fas fa-video text-warning me-3"></i>
                Filmes em Cartaz
            </h1>
            <p class="lead text-muted">Confira nossa programação atual</p>
        </div>
    </div>

    <!-- Search Bar -->
    <div class="row mb-5">
        <div class="col-lg-6 mx-auto">
            <form asp-action="Search" method="get" class="d-flex">
                <div class="input-group">
                    <input type="text" name="query" class="form-control form-control-lg" 
                           placeholder="Buscar filmes, atores, diretores ou gêneros..." 
                           value="@ViewBag.SearchQuery" />
                    <button class="btn btn-warning btn-lg" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.SearchQuery != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="fas fa-search me-2"></i>
                    Resultados para: <strong>"@ViewBag.SearchQuery"</strong>
                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary ms-3">
                        <i class="fas fa-times me-1"></i>Limpar busca
                    </a>
                </div>
            </div>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card movie-card h-100 shadow-sm">
                        <div class="card-img-top bg-dark d-flex align-items-center justify-content-center" style="height: 300px;">
                            <i class="fas fa-film fa-4x text-warning"></i>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@movie.Title</h5>
                            <p class="card-text text-muted">
                                <i class="fas fa-clock me-1"></i>
                                @movie.DurationInMinutes minutos
                            </p>
                            @if (movie.Genres != null && movie.Genres.Any())
                            {
                                <div class="mb-3">
                                    @foreach (var genre in movie.Genres.Take(3))
                                    {
                                        <span class="badge bg-warning text-dark me-1">@genre.Name</span>
                                    }
                                </div>
                            }
                            @if (movie.Actors != null && movie.Actors.Any())
                            {
                                <p class="card-text text-muted small">
                                    <i class="fas fa-users me-1"></i>
                                    @string.Join(", ", movie.Actors.Take(3).Select(a => a.FirstName + " " + a.LastName))
                                </p>
                            }
                            <div class="mt-auto">
                                <a asp-action="Details" asp-route-id="@movie.ID" 
                                   class="btn btn-warning w-100">
                                    <i class="fas fa-info-circle me-1"></i>Ver Detalhes
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-film fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">Nenhum filme em cartaz no momento</h4>
            <p class="text-muted">Volte em breve para conferir nossa programação!</p>
        </div>
    }
</div>

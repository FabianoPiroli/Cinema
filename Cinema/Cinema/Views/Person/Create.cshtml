@model Cinema.Models.Person

@{
    ViewData["Title"] = "Pessoas";
    var isClient = (Model != null && (
        // tenta suportar nomes de propriedade com diferentes capitalizações
        (Model.GetType().GetProperty("role") != null && (string?)Model.GetType().GetProperty("role")!.GetValue(Model) == "Cliente")
        || (Model.GetType().GetProperty("Role") != null && (string?)Model.GetType().GetProperty("Role")!.GetValue(Model) == "Cliente")
    ));
}

<div class="text-center">
    <h1>Adicionar Pessoa</h1>
    <hr />
</div>

<div class="container">
    <div class="mx-auto">
        <form asp-action="Create" id="personForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Primeiro Nome</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Último Nome</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Data de Nascimento</label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Data de Cadastro</label>
                <input asp-for="EnrollmentDate" class="form-control" />
                <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Papel</label>
                <select id="roleSelect" asp-for="role" class="form-control">
                    <option value="">-- Selecionar --</option>
                    <option value="Ator">Ator</option>
                    <option value="Diretor">Diretor</option>
                    <option value="Cliente">Cliente</option>
                </select>
                <span asp-validation-for="role" class="text-danger"></span>
            </div>

            <!-- Campos adicionais que aparecem apenas quando role == "Cliente" -->
            <div id="clientFields" style="display:@(isClient ? "block" : "none"); margin-top:15px;">
                <h4>Informações adicionais (Cliente)</h4>

                <div class="form-group">
                    <label>CPF</label>
                    <!-- máscara: 000.000.000-00 -->
                    <input type="tel" id="CPF" name="CPF" class="form-control" placeholder="000.000.000-00" maxlength="14" pattern="\d{3}\.\d{3}\.\d{3}-\d{2}" />
                </div>
                
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" name="Email" class="form-control" placeholder="Email" />
                </div>

                <div class="form-group">
                    <label>Telefone</label>
                    <!-- máscara: (00) 00000-0000 -->
                    <input type="tel" id="PhoneNumber" name="PhoneNumber" class="form-control" placeholder="(00) 00000-0000" maxlength="15" pattern="\(\d{2}\) \d{4,5}-\d{4}" />
                </div>


            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-warning btn-lg" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            var roleEl = document.getElementById('roleSelect');
            var clientFields = document.getElementById('clientFields');
            if (roleEl && clientFields) {
                roleEl.addEventListener('change', function (e) {
                    var v = (e.target.value || '').trim();
                    if (v === 'Cliente') {
                        clientFields.style.display = 'block';
                    } else {
                        clientFields.style.display = 'none';
                        Array.prototype.forEach.call(clientFields.querySelectorAll('input'), function (inp) {
                            inp.value = '';
                        });
                    }
                });
            }

            // --- Formatação CPF e Telefone ---
            var cpfEl = document.getElementById('CPF');
            var phoneEl = document.getElementById('PhoneNumber');

            function formatCPF(value) {
                if (!value) return '';
                var v = value.replace(/\D/g, '').slice(0, 11);
                v = v.replace(/(\d{3})(\d)/, '$1.$2');
                v = v.replace(/(\d{3})(\d)/, '$1.$2');
                v = v.replace(/(\d{3})(\d{1,2})$/, '$1-$2');
                return v;
            }

            function formatPhone(value) {
                if (!value) return '';
                var v = value.replace(/\D/g, '').slice(0, 11);
                if (v.length <= 10) {
                    // formato (00) 0000-0000
                    v = v.replace(/(\d{2})(\d{4})(\d{0,4})/, '($1) $2-$3').trim();
                } else {
                    // formato (00) 00000-0000
                    v = v.replace(/(\d{2})(\d{5})(\d{0,4})/, '($1) $2-$3').trim();
                }
                // remover possíveis traços finais vazios
                v = v.replace(/-$/, '');
                return v;
            }

            function attachFormatting(el, formatter) {
                if (!el) return;
                el.addEventListener('input', function (e) {
                    var start = el.selectionStart;
                    var oldLen = el.value.length;
                    el.value = formatter(el.value);
                    // tentativa simples de manter caret ao final
                    var newLen = el.value.length;
                    var diff = newLen - oldLen;
                    try {
                        el.setSelectionRange(start + diff, start + diff);
                    } catch {}
                });
                // garantir formatação no blur/paste
                el.addEventListener('blur', function () { el.value = formatter(el.value); });
                el.addEventListener('paste', function () {
                    setTimeout(function () { el.value = formatter(el.value); }, 0);
                });
            }

            attachFormatting(cpfEl, formatCPF);
            attachFormatting(phoneEl, formatPhone);

            // opcional: ao submeter, limpa caracteres não numéricos se você preferir enviar apenas dígitos
            var form = document.getElementById('personForm');
            if (form) {
                form.addEventListener('submit', function () {
                    // se quiser enviar só dígitos:
                    // if (cpfEl) cpfEl.value = (cpfEl.value || '').replace(/\D/g, '');
                    // if (phoneEl) phoneEl.value = (phoneEl.value || '').replace(/\D/g, '');
                    // deixando formatado por padrão
                });
            }
        })();
    </script>
}

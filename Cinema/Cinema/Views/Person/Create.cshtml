@model Cinema.Models.Person

@{
    ViewData["Title"] = "Pessoas";
    var isClient = Model != null && Model.IsClient == true;
    var roles = (IEnumerable<Cinema.Models.Role>?)ViewBag.RolesList ?? Enumerable.Empty<Cinema.Models.Role>();
}

<div class="text-center">
    <h1>Adicionar Pessoa</h1>
    <hr />
</div>

<div class="container">
    <div class="mx-auto">
        <form asp-action="Create" method="post" id="personForm">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Primeiro Nome</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Último Nome</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Data de Nascimento</label>
                <input asp-for="BirthDate" class="form-control" type="text" id="BirthDate" placeholder="dd/mm/aaaa" maxlength="10" pattern="\d{2}\/\d{2}\/\d{4}" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Data de Cadastro</label>
                <p class="form-control-plaintext">@((Model?.EnrollmentDate ?? DateOnly.FromDateTime(DateTime.Now)).ToString("dd/MM/yyyy"))</p>
                <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Papel (selecione um ou mais)</label>
                <div>
                    @foreach (var role in roles)
                    {
                        // checkbox name = selectedRoles -> será lido no controller
                        var isChecked = Model?.Roles?.Any(r => r.ID == role.ID) == true;
                        <div class="form-check form-check-inline">
                            <input class="form-check-input role-checkbox" type="checkbox" name="selectedRoles" value="@role.ID" id="role_@role.ID" data-name="@role.Name" @(isChecked ? "checked" : "") />
                            <label class="form-check-label" for="role_@role.ID">@role.Name</label>
                        </div>
                    }
                </div>
            </div>


            <!-- Campos adicionais que aparecem apenas quando role == "Cliente" -->
            <div id="clientFields" style="display:@(isClient ? "block" : "none"); margin-top:15px;">
                <h4>Informações adicionais (Cliente)</h4>

                <div class="form-group">
                    <label>CPF</label>
                    <!-- máscara: 000.000.000-00 -->
                    <input type="tel" id="CPF" name="CPF" class="form-control" placeholder="000.000.000-00" maxlength="14" pattern="\d{3}\.\d{3}\.\d{3}-\d{2}" />
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="text" name="Email" class="form-control" placeholder="Email" />
                </div>

                <div class="form-group">
                    <label>Telefone</label>
                    <!-- máscara: (00) 00000-0000 -->
                    <input type="tel" id="PhoneNumber" name="PhoneNumber" class="form-control" placeholder="(00) 00000-0000" maxlength="15" pattern="\(\d{2}\) \d{4,5}-\d{4}" />
                </div>


            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-warning btn-lg" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            // Observa checkboxes .role-checkbox e mostra/oculta clientFields quando houver "Cliente" marcado
            var clientFields = document.getElementById('clientFields');
            var checkboxes = document.querySelectorAll('.role-checkbox');

            function updateClientFields() {
                if (!clientFields) return;
                var hasCliente = Array.prototype.slice.call(checkboxes || []).some(function (cb) {
                    var name = (cb.dataset && cb.dataset.name || '').trim().toLowerCase();
                    return name === 'cliente' && cb.checked;
                });
                if (hasCliente) {
                    clientFields.style.display = 'block';
                } else {
                    clientFields.style.display = 'none';
                    Array.prototype.forEach.call(clientFields.querySelectorAll('input'), function (inp) {
                        inp.value = '';
                    });
                }
            }

            Array.prototype.forEach.call(checkboxes, function (cb) {
                cb.addEventListener('change', updateClientFields);
            });

            // chamar no load para refletir seleção inicial
            updateClientFields();

            // --- Formatação CPF e Telefone ---
            var cpfEl = document.getElementById('CPF');
            var phoneEl = document.getElementById('PhoneNumber');
            var birthdateEL = document.getElementById('BirthDate');

            function formatCPF(value) {
                if (!value) return '';
                var v = value.replace(/\D/g, '').slice(0, 11);
                v = v.replace(/(\d{3})(\d)/, '$1.$2');
                v = v.replace(/(\d{3})(\d)/, '$1.$2');
                v = v.replace(/(\d{3})(\d{1,2})$/, '$1-$2');
                return v;
            }

            function formatPhone(value) {
                if (!value) return '';
                var v = value.replace(/\D/g, '').slice(0, 11);
                if (v.length <= 10) {
                    v = v.replace(/(\d{2})(\d{4})(\d{0,4})/, '($1) $2-$3').trim();
                } else {
                    v = v.replace(/(\d{2})(\d{5})(\d{0,4})/, '($1) $2-$3').trim();
                }
                v = v.replace(/-$/, '');
                return v;
            }

            // formata como DD/MM/YYYY
            function formatBirthDate(value) {
                if (!value) return '';
                var v = value.replace(/\D/g, '').slice(0, 8);
                if (v.length >= 5) {
                    // DD MM YYYY -> DD/MM/YYYY
                    v = v.replace(/(\d{2})(\d{2})(\d{1,4})/, '$1/$2/$3');
                } else if (v.length >= 3) {
                    // DD MM -> DD/MM
                    v = v.replace(/(\d{2})(\d{1,2})/, '$1/$2');
                }
                return v;
            }

            function attachFormatting(el, formatter) {
                if (!el) return;
                el.addEventListener('input', function (e) {
                    var start = el.selectionStart;
                    var oldLen = el.value.length;
                    el.value = formatter(el.value);
                    var newLen = el.value.length;
                    var diff = newLen - oldLen;
                    try { el.setSelectionRange(start + diff, start + diff); } catch {}
                });
                el.addEventListener('blur', function () { el.value = formatter(el.value); });
                el.addEventListener('paste', function () { setTimeout(function () { el.value = formatter(el.value); }, 0); });
            }

            attachFormatting(cpfEl, formatCPF);
            attachFormatting(phoneEl, formatPhone);
            attachFormatting(birthdateEL, formatBirthDate);

            var form = document.getElementById('personForm');
            if (form) {
                form.addEventListener('submit', function () { /* opcional cleanup */ });
            }
        })();
    </script>
}
@using System.Linq
@model IEnumerable<Cinema.Models.Person>

@{
    ViewData["Title"] = "Pessoas";
}

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold mb-3">
                <i class="fas fa-user text-warning me-3"></i>
                Pessoas Cadastradas
            </h1>
        </div>
        <div class="text-center">
            <a asp-controller="Person" asp-action="Create" class="btn btn-warning btn-lg">
                Adicionar
            </a>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-lg-6 mx-auto">
            <form asp-action="Search" method="get" class="d-flex">
                <div class="input-group">
                    <input type="text" name="query" class="form-control form-control-lg" 
                           placeholder="Buscar pessoas..." 
                           value="@ViewBag.SearchQuery" />
                    <button class="btn btn-warning btn-lg" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.SearchQuery != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="fas fa-search me-2"></i>
                    Resultados para: <strong>"@ViewBag.SearchQuery"</strong>
                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary ms-3">
                        <i class="fas fa-times me-1"></i>Limpar busca
                    </a>
                </div>
            </div>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-sm table-hover mb-3 align-middle small">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nome</th>
                                <th scope="col">Papel(is)</th>
                                <th scope="col">Nascimento</th>
                                <th scope="col">Matrícula</th>
                                <th scope="col">Idade</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var person in Model)
                            {
                                <tr>
                                    <th scope="row">@person.ID</th>
                                    <td>
                                        <div class="fw-bold">@person.FirstName @person.LastName</div>
                                        @* Exibe informações adicionais se for cliente *@
                                        @if (person.IsClient == true)
                                            {
                                                <div class="text-muted small">
                                                    CPF: @(person.CPF?.ToString() ?? "-") ·
                                                    Email: @(string.IsNullOrWhiteSpace(person.Email) ? "-" : person.Email) ·
                                                    Tel: @(person.PhoneNumber?.ToString() ?? "-") ·
                                                </div>
                                            }
                                    </td>
                                    <td>
                                        @{
                                            var rolesHtml = "-";
                                            if (person.Roles != null && person.Roles.Any())
                                            {
                                                rolesHtml = string.Join("<br/>", person.Roles.Select(r => System.Net.WebUtility.HtmlEncode(r?.Name ?? "-")));
                                            }
                                        }
                                        @Html.Raw(rolesHtml)
                                    </td>
                                    <td>
                                        @(person.BirthDate?.ToString("dd/MM/yyyy") ?? "<span class=\"text-muted\">-</span>")
                                    </td>
                                    <td>
                                        @(person.EnrollmentDate?.ToString("dd/MM/yyyy") ?? "<span class=\"text-muted\">-</span>")
                                    </td>
                                    <td>Idade: @person.GetAge()</td>
                                    <td class="text-end">
                                        <a asp-action="Update" asp-route-id="@person.ID" class="btn btn-sm btn-outline-primary me-1" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@person.ID" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Remover" onclick="return confirm('Remover esta pessoa?');">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-film fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">Nenhum usuário adicionado.</h4>
        </div>
    }
</div>

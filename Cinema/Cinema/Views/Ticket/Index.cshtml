@model IEnumerable<Cinema.Models.Ticket>

@{
    ViewData["Title"] = "Ingressos";
}

<form id="deleteForm" asp-controller="Ticket" asp-action="Delete" method="post" style="display:none">
    @Html.AntiForgeryToken()
    <input id="deleteId" type="hidden" name="id" value="" />
</form>

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold mb-3">
                <i class="fas fa-ticket-alt text-warning me-3"></i>
                Ingressos Gerados
            </h1>
        </div>
        <div class="text-center">
            <a asp-controller="Ticket" asp-action="Create" class="btn btn-warning btn-lg">
                Adicionar
            </a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var ticket in Model)
            {
                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card ticket-card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title fw-bold">@ticket.Session?.Movie?.Title</h5>
                                <span class="badge bg-warning text-dark fs-6">R$ @ticket.Price?.ToString("F2")</span>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-6">
                                    <p class="card-text text-muted mb-1">
                                        <i class="fas fa-calendar me-1"></i>
                                        @ticket.Session?.StartTime.ToString("dd/MM/yyyy")
                                    </p>
                                </div>
                                <div class="col-6">
                                    <p class="card-text text-muted mb-1">
                                        <i class="fas fa-clock me-1"></i>
                                        @ticket.Session?.StartTime.ToString("HH:mm")
                                    </p>
                                </div>
                            </div>
                            
                            <p class="card-text text-muted mb-2">
                                <i class="fas fa-door-open me-1"></i>
                                Sala @ticket.Session?.Room?.RoomNumber
                            </p>
                            
                            <p class="card-text text-muted mb-3">
                                <i class="fas fa-shopping-cart me-1"></i>
                                Comprado em: @ticket.PurchaseDate.ToString("dd/MM/yyyy HH:mm")
                            </p>
                            
                            @if (ticket.Person != null)
                            {
                                <p class="card-text text-muted mb-3">
                                    <i class="fas fa-user me-1"></i>
                                    @ticket.Person.FirstName @ticket.Person.LastName
                                    @if (ticket.Person.IsStudent)
                                    {
                                        <span class="badge bg-success ms-2">Estudante</span>
                                    }
                                </p>
                            }
                            
                            <div class="d-grid">
                                <div class="mt-auto">
                                    <div class="d-flex gap-2 flex-column flex-sm-row">
                                    <a asp-action="Update" asp-route-id="@ticket.ID"
                                       class="btn btn-warning flex-fill">
                                        <i class="fa-solid fa-pen me-1"></i>Editar
                                    </a>
                                    <a href="#" class="btn btn-danger flex-fill delete-link" data-id="@ticket.ID">
                                        <i class="fa-solid fa-trash me-1"></i>Excluir
                                    </a>
                                    <button class="btn btn-outline-warning" onclick="printTicket(@ticket.ID)">
                                        <i class="fas fa-print me-1"></i>Imprimir Ingresso
                                    </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-ticket-alt fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">Nenhum ingresso no momento.</h4>
            <a asp-controller="Movie" asp-action="Index" class="btn btn-warning">
                <i class="fas fa-film me-1"></i>Ver Filmes
            </a>
        </div>
    }
</div>

